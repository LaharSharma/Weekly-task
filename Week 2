1. Insertion end in c.

#include <stdio.h>

int main() {
    int arr[100];
    int n, i, element;

   
    printf("Enter the number of elements in the array: ");
    scanf("%d", &n);

    
    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
    
    printf("Enter the element to insert at the end: ");
    scanf("%d", &element);

    arr[n] = element;
    n++; 
   
    printf("Array after inserting at the end:\n");
    for(i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }

    return 0;
}


2. Traversing in array in c.


#include <stdio.h>

int main() {
    int arr[] = {5, -3, 0, 9, -2, 7}; // sample array
    int size = sizeof(arr) / sizeof(arr[0]); // calculate size of array

    printf("Array elements and their status (P = Positive / A = Negative):\n");

    for(int i = 0; i < size; i++) {
        printf("Element at index %d = %d --> ", i, arr[i]);
        
        if(arr[i] > 0)
            printf("P (Positive)\n");
        else if(arr[i] < 0)
            printf("A (Negative)\n");
        else
            printf("Zero (Neither P nor A)\n");
    }

    return 0;
}
